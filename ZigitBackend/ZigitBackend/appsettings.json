{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtTokenConfig": {
    "secret": "MySecretKeyIsLongEnough",
    "issuer": "https://zigitbackend.com",
    "audience": "https://zigitbackend.com",
    "accessTokenExpiration": 60, //1 hour in minutes
    "refreshTokenExpiration": 2160 //36 hours in minutes
  },
  "ConnectionStrings": {
    "AppDbContextConnection": "Server=(localdb)\\mssqllocaldb;Database=ZigitDB;Trusted_Connection=True;MultipleActiveResultSets=true"
  }
}
